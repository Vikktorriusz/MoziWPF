<Window x:Class="MoziWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoziWPF"
        mc:Ignorable="d"
        Title="Mozi jegyfoglalás" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Label Content="Mozi Jegyfoglaló rendszer" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" />
        <DataGrid x:Name="dataGrid" Grid.Row="1"/>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="5" >
            <Button Content="Adatok betöltése" Width="120" Click="adatokbetoltese"  />
            <Button Content="Foglalás" Width="120" Click="foglalás" />
            <Button Content="Csak ahol van hely" Width="120" Click="vanhely" />
            <Button Content="Legnépszerűbb" Width="120" Click="legnepszerubb" />
            <Button Content="Átlagos szabad hely" Width="120" Click="atlaghely" />
            <Button Content="3D filmek" Width="120" Click="_3dfilmek" />
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="5">
            <TextBlock Text="Film címe:" VerticalAlignment="Center" Margin="2"/>
            <TextBox x:Name="tbCimKereses" Width="150" Margin="2"/>

            <CheckBox x:Name="cb3D" Content="3D-s" Margin="10"/>

            <Button Content="Keresés" Width="80" Margin="2"
            Click="Kereses"/>
        </StackPanel>


    </Grid>
</Window>
